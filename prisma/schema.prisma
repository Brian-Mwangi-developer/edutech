generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  emailAddress String   @unique
  firstName    String
  lastName     String
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Course {
  id               String   @id @default(cuid())
  name             String
  category         String
  level            String
  includeVideo     String   @default("Yes")
  courseOutput     Json
  createdBy        String
  userName         String
  userProfileImage String
  published        Boolean  @default(false)
  courseImage      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Chapter {
  id        String   @id @default(cuid())
  chapterId String
  courseId  String
  content   Json
  videoId   String
  createdAt DateTime @default(now())
}
